{
    "compilerOptions": {
      "skipLibCheck": true,
      "outDir": "./dist",
      "module": "commonjs",
      "strict": true,
      "moduleResolution": "node",
      "target": "es2017",
      "noImplicitAny": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "types" : [
        "node",
        "jest"
      ],
      "typeRoots": ["./node_modules/@types", "./src/types"],
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }